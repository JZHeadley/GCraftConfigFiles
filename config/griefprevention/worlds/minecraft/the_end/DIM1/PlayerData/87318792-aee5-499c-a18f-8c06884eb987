GriefPrevention {
    # How many claim blocks the player has earned in world via play time.
    accrued-claim-blocks=60
    # How many claim blocks the player has been gifted in world by admins, or purchased via economy integration.
    bonus-claim-blocks=0
    # Whether this player is currently in 3D cuboid mode.
    cuboid-mode=false
}
